# Production Environment Configuration

# Database
DATABASE_URL="postgresql://username:password@hostname:5432/database_name"

# Clerk Authentication
# Get these from https://dashboard.clerk.com
CLERK_SECRET_KEY="sk_live_..."
VITE_CLERK_PUBLISHABLE_KEY="pk_live_..."

# Application
NODE_ENV="production"
PORT="3000"

# Monitoring (Optional but Recommended)
# Sentry for error tracking - Get DSN from https://sentry.io
SENTRY_DSN="https://...@sentry.io/..."

# Caching (Optional - for multi-instance deployments)
# Redis for distributed caching
REDIS_URL="redis://hostname:6379"

# Security (Recommended for Production)
# Force HTTPS redirects
HTTPS_ONLY="true"

# CSRF protection secret (generate with: openssl rand -base64 32)
CSRF_SECRET="your-random-32-character-secret-here"

# Additional Production Settings
# Uncomment and configure as needed

# Rate Limiting
# RATE_LIMIT_WINDOW_MS="60000"
# RATE_LIMIT_MAX_REQUESTS="100"

# Session
# SESSION_SECRET="your-session-secret"

# Logging
# LOG_LEVEL="info"
# LOG_FORMAT="json"

# Performance
# CACHE_TTL_SECONDS="300"
# MAX_CONNECTIONS="20"
